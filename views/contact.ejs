<div class="container mt-5">
  <div class="row">
    <div class="col">
      <a class="btn btn-primary text-white" href="/contact/add">+ Contact</a>
    </div>
  </div>
<% console.log(contacts) %>
    <div class="row mt-5">
        <div class="col-md-8">
            <h2>Daftar Contact</h2>

            <% if (msg.length !== 0) { %>
              <div class="alert alert-success" role="alert">
                <%= msg %> 
              </div>
            <% } %>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">Email</th>
                    <th scope="col">Detail</th>
                  </tr>
                </thead>
                <tbody>
                    <%
                      if(contacts.length === 0){%>
                       <tr><td colspan="4" class="text-center"><h4>Data Masih Kosong</h4></td></tr> 
                      <% }
                      let no = 1; 
                      contacts.forEach(key => { %> 
                  <tr>
                    <th scope="row"><%= no %> </th>
                    <td><%= key.nama %> </td>
                    <td><%= key.email %></td>
                    <td><a href="/contact/<%= key.nama %>" class="btn btn-primary btn-sm"><i class="bi bi-info-circle"></i> Detail</a></td>
                    <td><a href="/contact/edit/<%= key.nama %>" class="btn btn-secondary btn-sm"><i class="bi bi-info-circle"></i> Edit</a></td>
                  </tr>
                  <%  no++; }) %> 
                </tbody>
              </table>
        </div>
    </div>
</div>