<div class="container mt-5">
    <h2>Tambah Data Contact</h2>  
    <br>
  <% if (typeof errors != 'undefined') { %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <%  errors.forEach(error => { %>
          <li><%= error.msg %> </li>
       <% }) %> 
        
      </ul>
    </div>
  <% } %>
    <br>
    <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id  %>">
        <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %> ">
      <div class="form-group">
        <label for="exampleFormControlInput1">Nama Lengkap</label>
        <input type="text" class="form-control" id="nama" name="nama" value="<%= contact.nama %>"/>
      </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Email address</label>
            <input type="text" class="form-control" id="email" name="email" value="<%= contact.email %>"/>
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">No. Handphone</label>
            <input type="text" class="form-control" id="no" name="no" value="<%= contact.no %>"/>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary mt-3">Tambah</button><a class=" mt-3 ml-2 btn btn-danger" href="/contact">Batal</a>
          </div>
        
        </form>
  </div>